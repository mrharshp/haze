<% if @message.errors.any? %>
 // message validations to come here
<% else %>
  messagesContainer = document.querySelector(".messages");
  messagesContainer.insertAdjacentHTML('beforeend', '<%= j render "message", message: @message, group: @group , user_is_messages_author: true %>');
  input = document.querySelector('#message_content');
  input.value = '';
  input.blur();

  mess = document.querySelectorAll('.message');
  lastMessage = mess[mess.length - 1];

  if (lastMessage !== undefined) {
    lastMessage.scrollIntoView();
  }


 <% end %>
