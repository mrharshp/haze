<div class="header3">
  <%= link_to @previous_location, class: "button-back mb-3" do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
  <div id="titles">
    <h3 class="uppercase"><%= link_to @group.name, edit_group_path(@group) %> <i class="fas fa-pencil-alt"></i></h3>
    <p id="subtitle">Expenses</p>
  </div>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <div class="mt-4">
      <%= link_to new_group_expense_path(@group), class: "button-plus-sm" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
    <p class="label-for-plus-btn">Add</p>
  </div>
</div>
<div class="d-flex m-2 justify-content-around">
  <%= link_to "Home", groups_path, class: "button-sm w-30" %>
  <%= link_to "Group Chat", group_path(@group), class: "button-sm w-30" %>
  <%= link_to "Lists", group_lists_path(@group), class: "button-sm w-30" %>
</div>
<div class="scroll">
  <div class="card-expenses">
    <% @expenses.each do |expense| %>
      <div class="card-expenses-infos">
        <%= link_to edit_group_expense_path(@group, expense) do %>
            <h2>
              <%= expense.value %> : <%= expense.currency %>
            </h2>
        <% end %>
        <p><%= expense.description %></p>
      </div>
    <% end  %>
    <% @splits.each do |split| %>
      <% expense = split.expense %>
      <div class="card-expenses-split">
        <p>
          <%= split.user.name %>
          Expense_id : <%= expense.id %>
          Paid? : <%= split.paid %>
          CS? : <%= split.customsplit.round(2) %>
          <% if split.paid == false %>
            <%= split.user.name %> owes: <%= expense.value * split.customsplit %>
          <% else %>
            <%= split.user.name %> is owed: <%= (expense.value / expense.splits.size) - (expense.value * split.customsplit)  %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
