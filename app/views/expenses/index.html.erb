<div class="header3">
  <%= link_to @previous_location, class: "button-back mb-3" do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
  <div id="titles">
    <h3 class="uppercase"><%= link_to @group.name, edit_group_path(@group) %> <i class="fas fa-pencil-alt"></i></h3>
    <p id="subtitle">Expenses</p>
  </div>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <div class="mt-4">
      <%= link_to new_group_expense_path(@group), class: "button-plus-sm" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
    <p class="label-for-plus-btn">Add</p>
  </div>
</div>
<div class="d-flex m-2 justify-content-around">
  <%= link_to "Home", groups_path, class: "button-sm w-30" %>
  <%= link_to "Group Chat", group_path(@group), class: "button-sm w-30" %>
  <%= link_to "Lists", group_lists_path(@group), class: "button-sm w-30" %>
</div>

<div class="d-flex m-2 justify-content-around btn btn-primary">
  Net Amount
</div>


      <div class="scroll">
        <% @expenses.each do |expense| %>
        <div class="card-expenses">
          <div class="card-expenses-infos">
          <p><%= expense.description %></p>
          <h2><%= expense.value %> <%= expense.currency %></h2>
          </div>
      <div class="card-expenses-split">
        <% expense.splits.each do |u| %>
          <% if u.user == current_user && u.paid == false %>
            <p>You Owe: <%= '%.2f' % (u.customsplit * u.expense.value) %> <%= u.expense.currency %> </p>
          <% elsif u.user == current_user && u.paid == true %>
            <p>You are owed: <%= '%.2f' % ((u.expense.value) - (u.expense.value * u.customsplit)) %> <%= u.expense.currency %> </p>
          <% end %>
        <% end %>
        <br>

        <p> Split across:
          <% if expense.splits.size != 1 %>
            <button type="button" class="button-people" data-toggle="modal" data-target="#exampleModalCenter">
              <%= expense.splits.size %> people </p>
            </button>
          <% else %>
            <button type="button" class="button-people" data-toggle="modal" data-target="#exampleModalCenter">
            <%= expense.splits.size %> person </p>
            </button>
          <% end %>
        </div>
      </div>

    <% end %>
</div>


<!-- Modal for seeing who the expense is split between -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

          </div>
          </div>
      </div>
  </div>
