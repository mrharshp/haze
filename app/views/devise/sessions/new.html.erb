<div class='container'>
  <br>
  <br>
  <h1 style="text-align: center; color: #54AFC3;">H A Z E</h1>
  <h3>Your Travel Companion</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <br>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, input_html: { id: "remember_me" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions button" style='width: 100%'>
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <br>
  <div class="btn btn-success" style='width: 100%; border-radius: 20px;'>
    <%= render "devise/shared/links" %>
  </div>
</div>

