<div class="container">
    <br>
    <br>
    <h1 style="text-align: center; color: #54AFC3;">H A Z E</h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% currencies = Currencies.find_currencies.flatten %>
        <div>
          <select class="custom-select form-control" id="inputGroupSelect02" name="user[homecurrency]">
            <option selected>Set Home Currency:</option>
            <% currencies.each do |currency| %>
                <option name="user[homecurrency]" ><%= currency[:symbol] %>: <%= currency[:country] %></option>
            <% end %>
          </select>
        </div>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
         <%= f.input :photo, input_html: { class: "border align-items-center border-radius form-control" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Update", class: "button w-100" %>
      </div>
      <br>
    <% end %>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back to profile", :back %>
    <br>
    <br>
</div>

